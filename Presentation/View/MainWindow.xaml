<Window x:Class="TPW.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ball Simulation" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0">
            <TextBlock Text="Liczba kulek:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Name="BallCountBox" Width="50" Margin="0,0,10,0" />
            <Button Content="Generuj" Click="StartButton_Click" />
        </StackPanel>

        <Canvas x:Name="canvas" Background="White" Grid.Row="1"/>
    </Grid>
</Window>
