<Window x:Class="TPW.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ball App" Height="700" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10">
            <TextBlock Text="Liczba pilek" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="BallCountBox" Width="50" Text="10" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button Content="Start" Width="100" Click="StartButton_Click"/>
        </StackPanel>

        <Canvas x:Name="canvas"
                Grid.Row="1"
                Background="White"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"/>
    </Grid>
</Window>
